DROP PROCEDURE IF EXISTS GET_DIASEMANA;

//

CREATE PROCEDURE GET_DIASEMANA(IN id_Dia INT)

BEGIN

SELECT * FROM Dia_de_semana WHERE idDia = id_Dia;

END

