DELIMITER //

DROP PROCEDURE IF EXISTS INSERT_DIASEMANA;

//

CREATE PROCEDURE INSERT_DIASEMANA(IN Diadesemana VARCHAR(45))

BEGIN

INSERT INTO Dia_de_semana (nombre_Dia_de_semana) VALUES (Diadesemana);

END

